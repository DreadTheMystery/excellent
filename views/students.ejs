<%- include('partials/adminHeader', { title: 'Students' }) %>
    <%- include('partials/adminNav', { title: 'Students' }) %>

        <main class="container section">
            <div class="panel">
                <h2>Add Student</h2>
                <form action="/dashboard/students" method="POST" class="form grid-form">
                    <input type="text" name="first_name" placeholder="First Name" required />
                    <input type="text" name="last_name" placeholder="Last Name" required />
                    <select name="gender" required>
                        <option value="">Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <input type="date" name="dob" required />
                    <select name="class_name" required>
                        <option value="">Class</option>
                        <% classOptions.forEach((className)=> { %>
                            <option value="<%= className %>">
                                <%= className %>
                            </option>
                            <% }) %>
                    </select>
                    <input type="text" name="guardian_name" placeholder="Guardian Name" required />
                    <input type="tel" name="guardian_phone" placeholder="Guardian Phone" required />
                    <input type="text" name="address" placeholder="Home Address" />
                    <button class="btn" type="submit">Save Student</button>
                </form>
            </div>

            <div class="panel">
                <h2>Students List</h2>
                <div class="table-wrapper">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Class</th>
                                <th>Guardian</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (!students.length) { %>
                                <tr>
                                    <td colspan="5">No students yet.</td>
                                </tr>
                                <% } %>
                                    <% students.forEach((student)=> { %>
                                        <tr>
                                            <td>
                                                <%= student.first_name %>
                                                    <%= student.last_name %>
                                            </td>
                                            <td>
                                                <%= student.class_name %>
                                            </td>
                                            <td>
                                                <%= student.guardian_name %>
                                            </td>
                                            <td>
                                                <%= student.guardian_phone %>
                                            </td>
                                            <td>
                                                <form action="/dashboard/students/<%= student.id %>/delete"
                                                    method="POST" onsubmit="return confirm('Delete this student?');">
                                                    <button class="btn btn-danger" type="submit">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>

        <%- include('partials/adminFooter') %>