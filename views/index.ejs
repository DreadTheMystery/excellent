    <meta name="description"
        content="Excellence Academy is a Nigeria-based school offering nursery, primary, and secondary education with WAEC/NECO preparation." />
    <meta property="og:title" content="Excellence Academy | Nigeria-Based School" />
    <meta property="og:description"
        content="Nursery, Primary, and Secondary education in Lagos, Nigeria with WAEC/NECO preparation." />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_NG" />
    <meta name="theme-color" content="#2563eb" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@600;700&display=swap"
