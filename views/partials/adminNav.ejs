        </button>
    </div>
    <div class="container admin-nav-inner <%= user && user.role === 'teacher' ? 'admin-nav-inner-sidebar' : '' %>"
        id="admin-nav-links">
        <a href="/dashboard" class="<%= title === 'Dashboard' ? 'active' : '' %>"><i class="ri-dashboard-line"></i>
            Overview</a>
        <% if (user && ['owner','admin','teacher'].includes(user.role)) { %>
            <a href="/teacher" class="<%= title === 'Teacher Workspace' ? 'active' : '' %>"><i class="ri-team-line"></i>
                Teacher Workspace</a>
            <a href="/dashboard/timetable" class="<%= title === 'Timetable' ? 'active' : '' %>"><i
                    class="ri-calendar-schedule-line"></i> Timetable</a>
            <a href="/dashboard/students" class="<%= title === 'Students' ? 'active' : '' %>"><i
                    class="ri-user-smile-line"></i> Students</a>
            <% } %>
                <% if (user && user.role==='owner' ) { %>
                    <a href="/dashboard/classes" class="<%= title === 'Classes' ? 'active' : '' %>"><i
                            class="ri-community-line"></i> Classes</a>
                    <% } %>
