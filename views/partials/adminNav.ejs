                                        class="<%= title === 'Student Payments' ? 'active' : '' %>"><i
                                            class="ri-hand-coin-line"></i> Payments</a>
                                    <a href="/dashboard/finance" class="<%= title === 'Finance' ? 'active' : '' %>"><i
                                            class="ri-wallet-3-line"></i>
                                        Finance</a>
                                    <% } %>
                                        <% if (user && ['owner','admin','teacher'].includes(user.role)) { %>
                                            <a href="/dashboard/attendance/students"
                                                class="<%= title === 'Student Attendance' ? 'active' : '' %>"><i
                                                    class="ri-calendar-check-line"></i> Student Attendance</a>
