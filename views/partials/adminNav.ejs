<header class="admin-top">
    <div class="container admin-top-inner">
        <div class="admin-brand">
            <i class="ri-government-line"></i>
            <div>
                <h1 class="admin-title">
                    <%= title %>
                </h1>
                <p class="admin-subtitle">School Management Portal</p>
            </div>
        </div>
        <form action="/logout" method="POST">
            <button class="btn btn-sm btn-outline" type="submit"><i class="ri-logout-box-r-line"></i> Logout</button>
        </form>
    </div>
</header>
