<%- include('partials/adminHeader', { title: 'Teachers' }) %>
    <%- include('partials/adminNav', { title: 'Teachers' }) %>

        <main class="container section">
            <div class="panel">
                <h2>Add Teacher</h2>
                <form action="/dashboard/teachers" method="POST" class="form grid-form">
                    <input type="text" name="name" placeholder="Full Name" required />
                    <input type="email" name="email" placeholder="Email" required />
                    <input type="tel" name="phone" placeholder="Phone" required />
                    <input type="text" name="subject" placeholder="Subject" required />
                    <select name="class_name">
                        <option value="">Assign Class</option>
                        <% classOptions.forEach((className)=> { %>
                            <option value="<%= className %>">
                                <%= className %>
                            </option>
                            <% }) %>
                    </select>
                    <input type="text" name="qualification" placeholder="Qualification" />
                    <button class="btn" type="submit">Save Teacher</button>
                </form>
            </div>

            <div class="panel">
                <h2>Teachers List</h2>
                <div class="table-wrapper">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Subject</th>
                                <th>Contact</th>
                                <th>Class</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (!teachers.length) { %>
                                <tr>
                                    <td colspan="5">No teachers yet.</td>
                                </tr>
                                <% } %>
                                    <% teachers.forEach((teacher)=> { %>
                                        <tr>
                                            <td>
                                                <%= teacher.name %>
                                            </td>
                                            <td>
                                                <%= teacher.subject %>
                                            </td>
                                            <td>
                                                <div>
                                                    <%= teacher.email %>
                                                </div>
                                                <div>
                                                    <%= teacher.phone %>
                                                </div>
                                            </td>
                                            <td>
                                                <%= teacher.class_name || '-' %>
                                            </td>
                                            <td>
                                                <form action="/dashboard/teachers/<%= teacher.id %>/delete"
                                                    method="POST" onsubmit="return confirm('Delete this teacher?');">
                                                    <button class="btn btn-danger" type="submit">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>

        <%- include('partials/adminFooter') %>